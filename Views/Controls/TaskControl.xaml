<UserControl x:Class="CyberSecurityChatBotGUI.Views.Controls.TaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500"
             d:DesignWidth="800"
             Background="{StaticResource TasksBackground}">

    <StackPanel Margin="10">
        
        <TextBlock Text="Task Assistant"
                   Style="{StaticResource PageTitle}"
                   Margin="0,0,0,10"/>

        
        <GroupBox Header="Add New Task"
                  Style="{StaticResource SectionBox}"
                  Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="10,0,10,10">
                
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Title" Margin="0,0,0,5"/>
                    <TextBox x:Name="TitleBox" Width="200"/>
                    
                    <TextBlock x:Name="TitleError"
                               Text="* Title is required"
                               Style="{StaticResource ValidationText}"
                               Visibility="Collapsed"
                               Margin="0,2,0,0"/>
                </StackPanel>

                
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Description" Margin="0,0,0,5"/>
                    <TextBox x:Name="DescBox" Width="300"/>
                </StackPanel>

                
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Reminder Date" Margin="0,0,0,5"/>
                    <DatePicker x:Name="DatePicker" Width="150"/>
                </StackPanel>

                
                <Button Content="Add Task"
                        Click="Add_Click"
                        VerticalAlignment="Bottom"
                        Padding="10,5"/>
            </StackPanel>
        </GroupBox>

        
        <GroupBox Header="Your Tasks"
                  Style="{StaticResource SectionBox}">
            <ListView x:Name="TaskList" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Title"
                                        Width="180"
                                        DisplayMemberBinding="{Binding Title}"/>
                        <GridViewColumn Header="Description"
                                        Width="300"
                                        DisplayMemberBinding="{Binding Description}"/>
                        <GridViewColumn Header="Reminder"
                                        Width="120"
                                        DisplayMemberBinding="{Binding ReminderDate, StringFormat={}{0:yyyy-MM-dd}}"/>
                        <GridViewColumn Header="Completed"
                                        Width="80"
                                        DisplayMemberBinding="{Binding IsCompleted}"/>
                        <GridViewColumn Header="Actions"
                                        Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <UniformGrid Columns="2"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 Margin="0,2">
                                        <Button Content="✔"
                                                FontFamily="Segoe UI Symbol"
                                                FontSize="14"
                                                Width="30" Height="30"
                                                Margin="2"
                                                Click="Complete_Click"
                                                Tag="{Binding}"/>
                                        <Button Content="✖"
                                                FontFamily="Segoe UI Symbol"
                                                FontSize="14"
                                                Width="30" Height="30"
                                                Margin="2"
                                                Click="Delete_Click"
                                                Tag="{Binding}"/>
                                    </UniformGrid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
    </StackPanel>
</UserControl>
